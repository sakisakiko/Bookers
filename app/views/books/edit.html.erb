<h1>Editing Book</h1>

<%=form_with model:@book do |f| %>


<div class="input-form">
<label for="book_title">Title</label>
 <%=f.text_field :title %>
</div>


<div class="input-form">
<label for="book_body">Body</label>
 <%=f.text_area:body %>
</div>

<div class="post-button">
 <%=f.submit 'Update Book'%>
</div>

<% end %>